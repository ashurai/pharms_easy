                    {% if isAccountOwner %}
                    <li ><a data-toggle="tab"  href="#home">Profile Details</a></li>
                    {% endif %}
                    <li><a class="active" data-toggle="tab" href="#medicalInformation">Medical Records</a></li>
                    {#<li><a data-toggle="tab" href="#settings">Prescriptions</a></li>#}
                </ul>


                <div class="tab-content">
                    {% if isAccountOwner %}
                    <div class="tab-pane" id="home">
                        <hr>
                        <form class="form" action="##" method="post" id="registrationForm">
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="first_name"><h4>First name</h4></label>
                                    <input type="text" class="form-control" name="first_name" id="first_name" value="{{ user.firstName }}" placeholder="first name" title="enter your first name if any.">
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="last_name"><h4>Last name</h4></label>
                                    <input type="text" class="form-control" name="last_name" id="last_name" value="{{ user.lastName }}" placeholder="last name" title="enter your last name if any.">
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="phone"><h4>Username</h4></label>
                                    <input type="text" class="form-control" name="phone" id="phone" placeholder="enter phone" value="{{ user.userName }}" title="enter your phone number if any." disabled>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="mobile"><h4>Email</h4></label>
                                    <input type="text" class="form-control" name="mobile" id="mobile" placeholder="enter mobile number" value="{{ user.email }}" title="enter your mobile number if any." disabled>
                                </div>
                            </div>
