                                {% endif %}
                            </div>
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="allergies"><h4>Allergies</h4></label>
                                    {{ form_widget(profileForm.allergies, { 'attr': { 'class': 'form-control', 'placeholder':'Allergies', 'id':'allergies', 'title':'enter your allergies.'}}) }}
                                </div>
                                {% if form_errors(profileForm.allergies) %}
                                    <div class="alert alert-danger" role="alert">{{ form_errors(profileForm.allergies) }}</div>
                                {% endif %}
                            </div>
                            {% if isAccountOwner %}
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="isSharingInformation"><h4>Share profile with Doctors and Pharmacists</h4></label>
                                    {{ form_widget(profileForm.isSharingInformation, { 'attr': { 'class': 'form-control', 'placeholder':'isSharingInformation', 'id':'isSharingInformation', 'title':'are you ready to share your profile with Doctors and Pharmacists.'}}) }}
                                </div>
                                {% if form_errors(profileForm.isSharingInformation) %}
                                    <div class="alert alert-danger" role="alert">{{ form_errors(profileForm.isSharingInformation) }}</div>
                                {% endif %}
                            </div>

                                {{ form_rest(profileForm) }}
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <br>
                                    <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                                    <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset</button>
                                </div>
                            </div>
                            {% endif %}
                        </form>

