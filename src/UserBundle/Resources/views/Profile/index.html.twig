                                    <label for="pathologies"><h4>Pathologies</h4></label>
                                    {{ form_widget(profileForm.pathologies, { 'attr': { 'class': 'form-control', 'placeholder':'Pathologies', 'id':'pathologies', 'title':'enter your pathologies.'}}) }}
                                </div>
                                {% if form_errors(profileForm.pathologies) %}
